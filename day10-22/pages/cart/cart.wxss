.cart-wrap {
  width: 100%;
}

.cart-wrap .card-goods {
  width: calc(100% - 40rpx);
  margin: 0 20rpx;
}

.cart-wrap .card-goods .card-shop-head {
  display: flex;
  height: 92rpx;
  line-height: 92rpx;
}

.cart-wrap .card-goods .card-shop-head .card-goods-item {
  margin-right: 20rpx;
}

.cart-wrap .card-goods .card-shop-head .card-goods-item span {
  font-size: 16px;
  font-weight: bold;
}

.cart-wrap .card-goods .card-shop-head .card-goods-item em {
  color: #ccc;
  margin-left: 5px;
}


.goods-group {
  display: flex;
  width: 100%;
  height: 200rpx;
}

.goods-group .goods-item {
  width: 10%;
  height: 200rpx;
  line-height: 200rpx;
}

.goods-group .goods-info {
  width: 90%;
  display: flex;
  height: 100%;
  align-items: center;
}

.goods-group .goods-info .goods-img {
  width: 140rpx;
  height: 140rpx;
}

.goods-group .goods-info .goods-img image {
  width: 140rpx;
  height: 140rpx;
}


.goods-content {
  width: 480rpx;
  margin-left: 20rpx;
}

.goods-content .goods-title {
  height: 60rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 24rpx;
}

.goods-content .goods-dis {
  display: flex;
  margin-top: 30rpx;
}

.goods-content .goods-dis .goods-price {
  width: 40%;
  height: 40rpx;
  color: #f55;
  font-weight: bold;
}

.goods-content .goods-dis .goods-price span {
  font-size: 16px;
}

.goods-content .goods-dis .goods-price span::before {
  content: "ï¿¥";
}


.goods-content .goods-dis .goods-input {
  display: flex;
  justify-content: space-between;
  width: 40%;
  border: 1px solid #efefef;
  border-radius: 5px;
}

.goods-content .goods-dis .goods-input input {
  width: 60rpx;
  text-align: center;
}

.goods-content .goods-dis .goods-input text {
  width: 50rpx;
  height: 40rpx;
  font-size: 18px;
  text-align: center;
  line-height: 40rpx;
}


.oper-icon {
  width: 25%;
}

.oper-icon i {
  margin-left: 20rpx;
}


.iconActive {
  color: #f55;
}


.cart-submit {
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  position: fixed;
  justify-content: space-between;
  bottom: 0;
}

.cart-submit .chackAll {
  width: 20%;
  margin-left: 20rpx;
}

.cart-submit .chackAll span {
  font-size: 14px;
  margin-left: 5px;
}


.cart-submit .van-text {
  width: 40%;
  text-align: right;
  margin: 0 20rpx;
  font-size: 14px;
}

.cart-submit .van-text span {
  color: #f44;
  font-size: 16px;
  font-weight: bold;
}

.cart-submit .van-text .text {
  color: #888;
  font-size: 12px;
}


.van-btn {
  width: 30%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #f44;
  color: white;
  font-size: 14px;
  text-align: center;
}

.iconActive {
  color: #f55;
}