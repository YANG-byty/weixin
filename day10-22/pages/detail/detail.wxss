@import "/assets/iconfont/iconfont.wxss";

.detail-header {
  width: 100%;
  height: 100rpx;
  position: fixed;
  top: 0;
  border-bottom: 1px solid #efefef;
  background-color: white;
  z-index: 100;
}

.detail-header .heaver-nav {
  width: calc(100% - 20%);
  margin: 0 10%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.detail-header view {
  flex: 1;
  text-align: center;
  font-size: 28rpx;

}

.detail-header .active {
  color: #f55;
}

.detail-swiper {
  width: 100%;
  height: 750rpx;
  margin-top: 102rpx;
}

.detail-swiper .swiper,
.detail-swiper .swiper image {
  width: 100%;
  height: 100%;
}

.detail-content {
  width: 100%;
}

.detail-content .area {
  width: calc(100% - 40rpx);
  margin: 0 20rpx;
}

.detail-content .area .price {
  height: 100rpx;
  line-height: 100rpx;
}

.detail-content .area .price em,
.detail-content .area .price span {
  color: #f20e28;
  font-weight: bold;
  font-size: 28px;
}

.detail-content .area .price s {
  margin-left: 20rpx;
  color: #888;
  text-decoration: line-through;
}

.detail-content .area .vip-warp {
  width: calc(100% - 40rpx);
  height: 86rpx;
  background-color: #efefef;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.detail-content .area .vip-warp .text {
  display: flex;
  align-items: center;
}

.detail-content .area .vip-warp .text .vip-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.detail-content .area .vip-warp .text .vip-img image {
  width: 40rpx;
  height: 40rpx;
}


.detail-content .area .vip-warp .text span {
  font-size: 28rpx;
}

.detail-content .area .vip-warp .text span i,
.detail-content .area .vip-warp .text span em {
  font-weight: bold;
}

.detail-content .area .vip-warp .text span i {
  font-size: 32rpx;
}


.detail-content .area .vip-register {
  width: 152rpx;
  height: 46rpx;
  background-color: #000;
  border-radius: 200rpx;
  text-align: center;
  line-height: 46rpx;
  font-size: 24rpx;
}

.detail-content .area .vip-register a {
  color: #e3c49e;
}

.detail-content .area .vip-register a i {
  font-size: 28rpx;
  margin-left: 6rpx;
}

.detail-content .area .explain {
  font-size: 28rpx;
  height: 110rpx;
  margin-top: 20rpx;
}

.detail-content .area .goods-outer {
  display: flex;
  justify-content: space-between;
}

.detail-content .area .goods-outer span {
  color: #888;
  font-size: 28rpx;
}


.detail-content .area .integral {
  margin: 2rem 0;
  font-size: 28rpx;
}

.detail-content .area .integral span {
  color: #888;
  margin-right: 20rpx;
}


.detail-content .area .goods-info .goods-create {
  height: 116rpx;
  display: flex;
}

.detail-content .area .goods-info .goods-create .img {
  width: 104rpx;
  height: 104rpx;
  padding-top: 0;
}

.detail-content .area .goods-info .goods-create .create {
  width: 452rpx;
  height: 116rpx;
  margin-left: 40rpx;
}

.detail-content .area .goods-info .goods-create .create view {
  font-size: 32rpx;
  font-weight: normal;
}

.detail-content .area .goods-info .goods-create .create view i {
  color: #f55;
  font-weight: bold;
  margin-left: 10rpx;
}


.detail-content .area .goods-info .goods-create .create p {
  color: #888;
  font-size: 28rpx;
}


.detail-content .area .goods-info .goods-create .info-add {
  width: 120rpx;
  height: 40rpx;
  border: 1px solid #ccc;
  text-align: center;
  line-height: 40rpx;
  padding: 10rpx;
  font-size: 28rpx;
}


.detail-content .area .goods-info .goods-score {
  height: 100rpx;
  line-height: 100rpx;
}

.detail-content .area .goods-info .goods-score ul {
  display: flex;
}

.detail-content .area .goods-info .goods-score ul li {
  width: 234rpx;
  font-size: 28rpx;
}

.detail-content .area .goods-info .goods-score ul li span {
  color: #888;
}

.detail-content .area .goods-info .goods-score ul li span .color1 {
  color: red;
}

.detail-content .area .goods-info .goods-score ul li span .color2 {
  color: #13ab53;
}

.detail-content .area .goods-info .goods-score ul li span .color3 {
  color: #f447c9;
}


.detail-content .area .goods-info .goods-score ul li em {
  color: white;
}

.detail-content .area .goods-info .goods-score ul li .bg1,
.detail-content .area .goods-info .goods-score ul li .bg2,
.detail-content .area .goods-info .goods-score ul li .bg3 {
  padding: 2rpx 10rpx;
  font-size: 28rpx;
  border-radius: 50%;
}

.detail-content .area .goods-info .goods-score ul li .bg1 {
  background-color: red;
}

.detail-content .area .goods-info .goods-score ul li .bg2 {
  background-color: #13ab53;
}

.detail-content .area .goods-info .goods-score ul li .bg3 {
  background-color: #f447c9;
}

.detail-content .van-tabs {
  display: flex;
  margin-bottom: 4rpx;
}

.detail-content .van-tab {
  width: 50%;
  text-align: center;
  font-size: 28rpx;
  height: 86rpx;
  line-height: 86rpx;
}

.detail-content .van-tab a {
  display: inline-block;
}


.detail-content .active {
  color: #f55;
  border-bottom: 1px solid #f55;
}

.detail-content .van-tabs__content {
  width: 100%;
}

.detail-content .van-tabs__content .s-img .img {
  width: 100%;
}

.detail-content .van-tabs__content .s-img image {
  width: 100%;
}

.detail-content p a image {
  width: 100%;
}

.detail-table {
  width: calc(100% - 40rpx);
  margin: 20rpx;
}

.detail-table .detail-row {
  display: flex;
  width: 100%;
}

.detail-table .detail-row view {
  flex: 1;
  border: 1px solid #ccc;
  height: auto;
  font-size: 24rpx;
  padding: 10rpx;
}

.showMack {
  width: 100%;
  position: absolute;
  bottom: 0;
  background-color: white;
  z-index: 150;
}

.mack {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .8);
  z-index: 111;
}

.showMack .mack-content {
  width: 100%;
  height: 100px;
  display: flex;
}

.showMack .mack-content .img {
  width: 30%;
  height: 164rpx;
  position: relative;
}

.showMack .mack-content .img image {
  width: 164rpx;
  height: 164rpx;
  position: absolute;
  top: -20px;
  left: 20rpx;
  border-radius: 20rpx;
}

.showMack .mack-content .img-detail {
  width: 70%;
  position: relative;
}

.showMack .mack-content .img-detail .icon {
  position: absolute;
  top: 0;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  font-weight: bold;
}

.showMack .mack-content .img-detail .title {
  height: 88rpx;
  margin: 30rpx 20rpx 0 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.showMack .mack-content .img-detail .mack-price {
  height: 60rpx;
  line-height: 60rpx;
  color: #f55;
  font-size: 40rpx;
}

.showMack .mack-content .img-detail .mack-store {
  font-size: 28rpx;
  color: #ccc;
}


.showMack .input-num {
  width: calc(100% - 20rpx);
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 10rpx;
}

.showMack .input-num .num {
  color: #ccc;
}

.showMack .input-num .input {
  display: flex;
  border: 1px solid #efefef;
}

.showMack .input-num .input view {
  width: 60rpx;
  height: 100%;
  text-align: center;
}

.showMack .input-num .input input {
  width: 88rpx;
  height: 100%;
  text-align: center;
  border-left: 1px solid #efefef;
  border-right: 1px solid #efefef;
}



.showMack .btn {
  width: 100%;
  display: flex;

}

.showMack .btn view {
  width: 50%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
}

.showMack .btn .addCart {
  background-color: #f55;
}

.showMack .btn .buy {
  background-color: #f8c419f6;
}

/* 底部导航 */
.footer-container {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  border-top: 1px solid #efefef;
}

.footer-container .footer-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  flex-direction: column;
  position: relative;
}

.footer-container .footer-item .kf {
  height: 100%;
  width: 100%;
  position: absolute;
  z-index: 99;
  opacity: 0;
}

.footer-container .footer-item .buyNum {
  min-width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  padding: 5rpx;
  background: #f44;
  color: #fff;
  text-align: center;
  line-height: 30rpx;
  font-size: 24rpx;
  position: absolute;
  right: 5rpx;
  top: 5rpx;
}

.footer-container .footer-item .iconfont {
  font-size: 40rpx;
  color: #f55;
}

.footer-container .addcart {
  flex: 2;
  font-size: 28rpx;
  background: #f44;
  color: #fff;
  height: 100%;
}

.footer-container .buy {
  flex: 2;
  font-size: 28rpx;
  background: #ff976a;
  color: #fff;
  height: 100%;
}

.buyNum {
  position: absolute;
  top: -10rpx;
  right: 0;
  padding: 4rpx;
  background-color: #f55;
  color: white;
}