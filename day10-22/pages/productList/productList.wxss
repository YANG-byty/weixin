.product-list .product-filter {
  margin-top: 100rpx;
  width: 100%;
  height: 70rpx;
}

.product-list .product-filter ul {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.product-list .product-filter ul .active {
  color: #f55;
}

.product-list .product-filter ul li {
  height: 100%;
  flex: 1;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}


.product-list .goodListDatas {
  width: calc(100% - 40rpx);
  margin: 0 20rpx;
}

.product-list .goodListDatas ul {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-list .goodListDatas ul li {
  width: 49%;
  background-color: white;
  margin-top: 20rpx;
}

.product-list .goodListDatas ul li .pro-img {
  width: 100%;
  height: 356rpx;
}

.product-list .goodListDatas ul li .pro-img image {
  width: 100%;
  height: 100%;
}

.product-list .goodListDatas ul li .pro-details {
  height: 76rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.product-list .goodListDatas ul li .pro-price {
  color: red;
  font-size: 28rpx;
  font-weight: bold;
  height: 80rpx;
  line-height: 80rpx;
}

.product-list .goodListDatas ul li .pro-price em {
  font-style: normal;
}

.product-list .goodListDatas ul li .outer {
  width: calc(100% - 40rpx);
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  margin-bottom: 10rpx;

}

.product-list .goodListDatas ul li .outer .text,
.product-list .goodListDatas ul li .outer i {
  color: red;

}

.product-list .goodListDatas ul li .outer span {
  margin-right: 20rpx;
  font-size: 24rpx;
}

.product-list .goodListDatas ul li .outer .text2 {
  color: #ccc;
}


