/* pages/component/homeMain/homeMain.wxss */
@import "/assets/iconfont/iconfont";
.homeMain{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  border-radius: 20rpx;
}
.homeMain .nav-swiper .homeMain-swiper{
  height:400rpx;
}
.homeMain .nav-swiper{
  width: 100%;
  background-color: white;
  border-radius: 20rpx;
}
.homeMain .nav-swiper .swiper-slide{
  display: flex;
  flex-wrap: wrap;
}
.homeMain .nav-swiper .swiper-slide a{
  display: block;
  width: 142rpx;
  height: 196rpx;
}
.homeMain .nav-swiper .swiper-slide a image{
  width: 142rpx;
  height: 142rpx;
}
.homeMain .nav-swiper .swiper-slide a text{
  font-size: 26rpx;
  text-align: center;
  display: block;
  width: 100%;
}

.homeMain .nav-swiper .announcement{
  width: 100%;
  display: flex;
  height: 80rpx;
  align-items: center;
  border: 1px solid #efefef;
  padding: 10rpx 0;
}

.homeMain .nav-swiper .announcement .hotspot-img{
  width: 140rpx;
  height: 60rpx;
  margin-left: 20rpx;
}
.homeMain .nav-swiper .announcement .hotspot-img image{
  width: 100%;
  height: 100%;
}

.homeMain .nav-swiper .announcement .hotspot-swiper{
  width: 70%;
  height:100% ;
  margin-left: 30rpx;
}
.homeMain .nav-swiper .announcement .hotspot-swiper .hotspot-text{
  height: 100%;
  line-height: 80rpx;
  font-weight: bold;
  font-size:28rpx;
}
.homeMain .nav-swiper .announcement .icon-img{
  width: 34rpx;
  height: 34rpx;
  margin-right:20rpx;
}
.homeMain .nav-swiper .announcement .icon-img view{
  color: #f55;
  font-size:30rpx;
  border: 1px solid #f55;
  border-radius: 50%;
}

.homeMain .desc-img{
  margin-top: 20rpx;
  height: 350rpx;
  width: 100%;
}
.homeMain .desc-img image{
  width: 100%;
  height: 100%;
}

.count-down{
  width: 100%;
  background-color: white;
  border-radius: 20rpx;
}
.count-down .seckill-header{
  width: 100%;
  margin-bottom: 30rpx;
}
.count-down .seckill-header .header-top{
  width: 100%;
  height: 110rpx;
  display: flex;
  align-items: center;
}
.count-down .seckill-header .header-top .tit-img{
  width: 50%;
  height: 44rpx;
}
.count-down .seckill-header .header-top .tit-img image{
  width: 200rpx;
  height: 44rpx;
}
.count-down .seckill-header .header-top .data{
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
}
.count-down .seckill-header .header-top .data .data-time{
  display: flex;
  align-items: center;
  height: 100%;
}
.seckill-header .header-top .data  .data-text{
  font-size: 26rpx;
}
.seckill-header .header-top .data .data-time{
  color: #FE482D;
}
.seckill-header .header-top .data .data-time view{
  width: 46rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: #FE482D;
  border-radius: 10rpx;
  margin: 0 6rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
}

.seckill-header .header-time-slot{
  width:100%;
  display: flex;
}

.seckill-header .header-time-slot .time-item{
  padding-bottom: 10rpx;
  flex: 1;
  text-align: center;
  color: #555;
}

.seckill-header .header-time-slot .active{
  border-bottom: 2px solid #f55;
  color: #f55;
  font-weight: bold;
}

.count-down .seckill-goods-list{
  width:100%;
}
.count-down .seckill-goods-list .scrollView{
  display: flex;
}
.count-down .seckill-goods-list .swiper-slide{
  width: 216rpx;
  padding: 10rpx;
}
.count-down .seckill-goods-list .swiper-slide .slide-img{
  width: 100%;
  height: 208rpx;
  position: relative;
}
.count-down .seckill-goods-list .swiper-slide .slide-img .seckil{
  position: absolute;
  top: 0;
  left:0;
  width: 100rpx;
  height: 36rpx;
}
.count-down .seckill-goods-list .swiper-slide .slide-img image{
  width: 208rpx;
  height: 208rpx;
}
.count-down .seckill-goods-list .swiper-slide .goods-info .goods-title{
  height: 50rpx;
  line-height: 50rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}
.count-down .seckill-goods-list .swiper-slide .goods-info .goods-price{
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #f55;
}
.count-down .seckill-goods-list .swiper-slide .goods-info .currency-price{
  height: 40rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: normal;
  color: rgb(136, 136, 136);
  text-decoration: line-through;
}



.count-down .more{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;

}
.count-down .more view{
  font-size: 28rpx;
  font-weight: bold;
}

