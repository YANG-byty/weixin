/* pages/component/homeEle/homeEle.wxss */
.homeEle{
  width: 100%;
  background-color: #efefef;
  position: absolute;
  top: 0;
  bottom: 0;
  height: 800px;
}
.homeEle-banner{
  width: 94%;
  margin: 0 auto;
  height: 800px;
}
.homeEle .top-catalog{
  background-color: #fff;
  border-radius: 10px;
  display: flex;
  height: 120px;
  margin-top: 20rpx;
}
.homeEle .top-catalog .item{
  width: 100%;
  flex: 1;
}
.homeEle .top-catalog .item .item-img{
  width: 100%;
  height: 75px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.homeEle .top-catalog .item .item-img image{
  width: 53px;
  height: 53px;
}
.homeEle .top-catalog .item .item-text{
  font-size: 12px;
  text-align: center;
}

.homeEle .category-brand{
  width: 100%;
  height: 300px;
  background-color: #fff;
  margin-top: 20rpx;
}
