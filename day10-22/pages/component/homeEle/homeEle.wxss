/* pages/component/homeEle/homeEle.wxss */
.homeEle{
  width: 100%;
  background-color: #efefef;
  position: absolute;
  top: 0;
  bottom: 0;
  height: auto;
}
.homeEle-banner{
  width: 94%;
  margin: 0 auto;
}
.homeEle .top-catalog{
  background-color: #fff;
  border-radius: 10px;
  display: flex;
  height: 120px;
  margin-top: 20rpx;
}
.homeEle .top-catalog .item{
  width: 100%;
  flex: 1;
}
.homeEle .top-catalog .item .item-img{
  width: 100%;
  height: 75px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.homeEle .top-catalog .item .item-img image{
  width: 53px;
  height: 53px;
}
.homeEle .top-catalog .item .item-text{
  font-size: 12px;
  text-align: center;
}

.homeEle .category-brand{
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
  border-radius: 10px;
  padding: 10px 0;
}
.homeEle .category-brand .category-title{
  padding: 10px 20px 10px;
}
.homeEle .category-brand .brand-list{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.homeEle .category-brand .brand-list .brand-item{
  width:25%;
  height: 70px;
}
.homeEle .category-brand .brand-list .brand-item .brand-img{
  width: 100%;
  height: 55px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.homeEle .category-brand .brand-item .brand-img image{
  width: 100%;
  height: 31px;
}
.homeEle .category-brand .brand-item .brand-text{
  text-align: center;
  font-size: 12px;
}
/* 商品列表 */
.homeEle .product-list{
  width: 100%;
  height: auto;
  margin-top: 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  
}
.homeEle .product-list .product-item{
  width: 49%;
  background-color: white;
  border-radius: 10px;
  margin-bottom: 10px;
}
.homeEle .product-list .product-item .product-img{
  height: 174px;
}
.homeEle .product-list .product-item .product-img image{
  height: 100%;
}
.homeEle .product-list .product-item .product-title{
  width: 100%;
  height: 37px;
  font-size: 14px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  width: 90%;
  margin: 0 auto;
}

.homeEle .product-list .product-item .product-price{
  height: 32px;
  line-height: 32px;
  color: red;
  font-weight: bold;
  width: 90%;
  margin: 0 auto;
}
.homeEle .product-list .product-item .product-outer{
  font-size: 12px;
  width: 90%;
  margin: 0 auto 10px;
}
.homeEle .product-list .product-item .product-outer .outer-breand{
  background-color: #fef0f0;
  padding: .1rem .5rem;
  border-radius: .2rem;
  color: #f92028;
}
.homeEle .product-list .product-item .product-outer .outer-num{
  margin-left: 10rpx;
  color: #ccc;
}

