<!--pages/template/template.wxml-->
<template name="swiper">
  <view class="swiper">
      <swiper indicator-active-color='#efefef'  indicator-dots="true" interval="2000" autoplay="true" circular="true" bindchange="homeIndexFn" >
        <swiper-item wx:for="{{swiperLists}}" wx:key="index"><image src="{{item.img}}"></image></swiper-item>
     </swiper>  
  </view>
</template>
